@model List<StaffInfoBriefViewModel>

@{
    int num = 0;
}

<div class="container p3">
    <div class="row pt-4">
        <div class="col-12 p-0">
            <h3 class="text-uppercase">Staff</h3>
        </div>
    </div>
    <div class="row pt-2">
        <div class="col-12 p-0">
            @if (Model.Count > 0)
            {
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>Full Name Eng</th>
                            <th>Some Staff Info</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var staffInfo in Model)
                        {
                            num++;
                        <tr>
                            <td>@num</td>
                            <td>@staffInfo.FullNameEng</td>
                            <td>@staffInfo.StaffInfo</td>

                            <td class="text-center p-2 align-middle">
                                <div class="btn-group" role="group">
                                    @if (staffInfo.BasicInfoExists)
                                    {
                                        <a asp-controller="StaffInfo" asp-route-staffUserId="@staffInfo.StaffUserId"
                                           asp-action="Details" class="btn btn-primary mx-1" title="Details">
                                            <i class="fas fa-file-alt"></i>
                                        </a>
                                        <a asp-controller="StaffInfo" asp-route-staffUserId="@staffInfo.StaffUserId" asp-action="Edit"
                                           class="btn btn-primary mx-1" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-controller="StaffInfo" asp-route-staffUserId="@staffInfo.StaffUserId" asp-action="Create"
                                           class="btn btn-primary mx-1" title="Create">
                                            <i class="fas fa-plus"></i>
                                        </a>
                                    }
                                    <a asp-controller="StaffInfo" asp-route-staffUserId="@staffInfo.StaffUserId" asp-action="Delete"
                                       class="btn btn-danger mx-1" title="Clear">
                                        <i class="fas fa-eraser"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No staff exists</p>
            }
        </div>
    </div>
</div>
