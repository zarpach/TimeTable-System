<style type="text/css">

    @*-----Text-----*@

    .syllabus_container {
        font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,"Noto Sans",sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol","Noto Color Emoji";
    }

    .syllabus_container hr {
        border: 1px solid #29317D;
        margin: 0px;
        padding: 0px;
    }

    .syllabus_container h4 {
        text-align: center;
        font-size: 28pt;
        margin: 5px 0px;
        padding: 0px;
        text-transform: uppercase;
    }

    .syllabus_container h5 {
        font-size: 26pt;
        margin: 40px 0px 0px 0px;
        text-transform: uppercase;
    }

    .syllabus_container h6 {
        font-size: 20pt;
        margin: 30px 0px 0px 0px;
        font-weight: normal;
        text-transform: uppercase;
    }

    .syllabus_container p {
        font-size: 18pt;
        margin: 0px;
        padding: 0px;
    }

    .syllabus_block_content p {
        margin: 10px 0px 0px 0px;
        white-space: pre-wrap;
    }


    @*-----Header-----*@

    .syllabus_header {
        width: auto;
    }

    #header_content {
        display: flex;
        justify-content: space-between;
        margin: 20px 0px;
    }

    #course_info {
        text-align: right;
    }


    @*-----Tables-----*@

    .syllabus_container table {
        font-size: 18pt;
        width: 100%;
        margin-top: 10px;
        border-collapse: collapse;
    }

    .syllabus_container table td {
        border: 1px solid #6c757d;
        padding: 10px;
    }

    #grading_table {
        text-align: center;
    }

    #calendar_table {
        margin-top: 40px;
    }

    #calendar_table td {
        white-space: pre-wrap;
    }

    #calendar_table h5 {
        font-size: 22pt;
        text-align: center;
        margin: 10px 0px;
        font-weight: bold;
        text-transform: uppercase;
    }

    #calendar_table p {
        text-align: center;
        margin: 10px 0px;
    }

    .active_color {
        background-color: rgba(0,0,0,.075);
    }

    .active_color_dark {
        background-color: rgba(0,0,0,.175);
    }


    @*-----Breakdown-----*@

    #grade_breakdown {
        width: 60%;
    }

    .grade_breakdown_list {
        display: flex;
        justify-content: space-between;
    }

    #grade_breakdown #simple_border {
        border: 1px solid #6c757d;
        margin-top: 30px;
    }

    #grade_breakdown #dashed_border {
        border: 1px dashed #6c757d;
        margin-top: 30px;
    }

    .grade_breakdown_list {
        display: flex;
    }

    .flex-item:first-child,
    .flex-item:last-child {
        flex: 0 0 auto;
    }

    .flex-item:nth-child(2) {
        flex: 1;
        padding: 0px 20px;
    }
   
</style>
