@model List<CyclePartCourseDTO>

@{ 
    Layout = null;
    int num = 0;
}
<div class="modal" id="selectCourses">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Select courses</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>x</span>
                </button>
            </div>

            <div class="modal-body">
                <div>
                    <input type="hidden" id="selectedRowIndex" value="@ViewBag.RowIndex" />
                    <div class="form-group row">
                        <div class="col-2">
                            <label>Department:</label>
                        </div>
                        <div class="col-4">
                            <select class="form-control dropdown" id="selectedDepartmentId" asp-items="@ViewBag.Departments"></select>
                        </div>

                        <div class="col-2">
                            <label>Year:</label>
                        </div>
                        <div class="col-4">
                            <input class="form-control" id="selectedYear" value="@ViewBag.Year" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-2">
                            <label>Course ID:</label>
                        </div>
                        <div class="col-4">
                            <input type="text" class="form-control" id="selectedCourseId" value="@ViewBag.CourseId" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-12 text-right">
                            <button type="button" class="btn btn-primary" id="filterCourses">
                                <i class="fab fa-sistrix"></i> &nbsp; Filter
                            </button>
                        </div>
                    </div>
                </div>
                <hr>
                <div style="max-height: 500px; overflow: auto;">
                    <table class="table table-bordered table-striped" style="width:100%">
                        <thead>
                            <tr>
                                <th>№</th>
                                <th>Course name</th>
                                <th>Course ID</th>
                                <th>Points</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var course in Model)
                            {
                                <tr>
                                    <td>@(++num)</td>
                                    <td>@(course.Course.NameRus + " / " + course.Course.NameEng)</td>
                                    <td>@course.Course.ImportCode</td>
                                    <td>@course.Points</td>
                                    <td class="text-center">
                                        <input type="hidden" name="CourseId" value="@course.Id" />
                                        <input type="hidden" name="selectedNameEng" value="@course.Course.NameEng" />
                                        <input type="hidden" name="selectedNameRus" value="@course.Course.NameRus" />
                                        <input type="hidden" name="selectedNameKir" value="@course.Course.NameKir" />
                                        <input type="hidden" name="selectedNameKir" value="@course.Course.NameKir" />
                                        <input type="hidden" name="selectedPoints" value="@course.Points" />
                                        <input type="hidden" name="selectedCyclePartCourseId" value="@course.Id" />

                                        <button class="btn btn-primary" name="selectCourse">
                                            Select
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                
            </div>

            <div class="modal-footer">
                <input type="hidden" name="cyclePartIndex" value="@ViewBag.CyclePartIndex" />
                <input type="hidden" name="cycleId" value="@ViewBag.CycleId" />
                <input type="hidden" name="part" value="@ViewBag.Part" />
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>