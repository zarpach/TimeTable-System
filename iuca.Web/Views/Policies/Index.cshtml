@model IEnumerable<PolicyDTO>

@{
    int num = 0;
}

<div class="container p3">

    <div class="row pt-4">
        <div class="col-12 p-0">
            <h3 class="text-uppercase">Policies</h3>
        </div>
    </div>

    <div class="row pt-4 text-right">
        <div class="col-12 p-0">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Add Policy
            </a>
        </div>
    </div>

    <div class="row pt-2">
        <div class="col-12 p-0 table-responsive">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>Name (En)</th>
                            <th>Name (Ru)</th>
                            <th>Name (Kg)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var policy in Model)
                        {
                            num++;
                            <tr>
                                <td>@num</td>
                                <td>@policy.NameEng</td>
                                <td>@policy.NameRus</td>
                                <td>@policy.NameKir</td>
                                <td width="15%" class="text-center p-2">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-Id="@policy.Id" class="btn btn-primary mx-1" title="Details">
                                            <i class="fas fa-file-alt"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-Id="@policy.Id" class="btn btn-primary mx-1">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-Id="@policy.Id" class="btn btn-danger mx-1">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No policy exists</p>
            }
        </div>
    </div>
</div>
