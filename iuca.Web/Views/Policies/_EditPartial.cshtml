@model PolicyDTO

<input type="hidden" asp-for="Id" />

<div class="form-group row mt-2">
    <div class="col-12">
        <label>Name (En)</label>
    </div>
    <div class="col-12">
        <input asp-for="NameEng" class="form-control shadow-none" />
        <span asp-validation-for="NameEng" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <div class="col-12">
        <label>Name (Ru)</label>
    </div>
    <div class="col-12">
        <input asp-for="NameRus" class="form-control shadow-none" />
        <span asp-validation-for="NameRus" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <div class="col-12">
        <label>Name (Kg)</label>
    </div>
    <div class="col-12">
        <input asp-for="NameKir" class="form-control shadow-none" />
        <span asp-validation-for="NameKir" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <div class="col-12">
        <label>Description (En)</label>
    </div>
    <div class="col-12">
        <textarea asp-for="DescriptionEng" class="form-control shadow-none" rows="4" wrap="hard"></textarea>
        <span asp-validation-for="DescriptionEng" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <div class="col-12">
        <label>Description (Ru)</label>
    </div>
    <div class="col-12">
        <textarea asp-for="DescriptionRus" class="form-control shadow-none" rows="4" wrap="hard"></textarea>
        <span asp-validation-for="DescriptionRus" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <div class="col-12">
        <label>Description (Kg)</label>
    </div>
    <div class="col-12">
        <textarea asp-for="DescriptionKir" class="form-control shadow-none" rows="4" wrap="hard"></textarea>
        <span asp-validation-for="DescriptionKir" class="text-danger"></span>
    </div>
</div>
