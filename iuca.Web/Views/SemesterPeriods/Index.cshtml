@model IEnumerable<SemesterPeriodDTO>
@using iuca.Application.Enums

@{
    int num = 0;
}

<div class="container p3">
    <div class="row pt-4">
        <div class="col-12 p-0">
            <h3 class="text-uppercase">Semester periods</h3>
        </div>
    </div>
    <div class="row pt-4 text-right">
        <div class="col-12 p-0">
            <a asp-controller="SemesterPeriods" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Add Semester Period
            </a>
        </div>
    </div>
    <div class="row pt-2">
        <div class="col-12 p-0">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>
                                Semester
                            </th>
                            <th>
                                Period
                            </th>
                            <th>
                                Date begin
                            </th>
                            <th>Date end</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var semesterPeriod in Model)
                        {
                            num++;
                            <tr>
                                <td>@num</td>
                                <td>@(EnumExtentions.GetDisplayName((enu_Season)semesterPeriod.Semester.Season)) @semesterPeriod.Semester.Year</td>
                                <td>@(EnumExtentions.GetDisplayName((enu_Period)semesterPeriod.Period))</td>
                                <td>@semesterPeriod.DateBegin.ToString("dd.MM.yyyy HH:mm:ss")</td>
                                <td>@semesterPeriod.DateEnd.ToString("dd.MM.yyyy HH:mm:ss")</td>
                                <td width="15%" class="text-center p-2">
                                    <div class="btn-group" role="group">
                                        <a asp-controller="SemesterPeriods" asp-route-id="@semesterPeriod.Id"
                                           asp-action="Details" class="btn btn-primary mx-1" title="Details">
                                            <i class="fas fa-file-alt"></i>
                                        </a>
                                        <a asp-controller="SemesterPeriods" asp-route-Id="@semesterPeriod.Id" asp-action="Edit" class="btn btn-primary mx-1">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-controller="SemesterPeriods" asp-route-Id="@semesterPeriod.Id" asp-action="Delete" class="btn btn-danger mx-1">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No semester period exists</p>
            }
        </div>
    </div>
</div>
