
<div class="container p3">
    <div class="row pt-4">
        <div class="col-12">
            <h3 class="text-uppercase">Synchronize Student Courses</h3>
        </div>
    </div>

    <hr>

    <div class="row">
        <div class="col-6">
            <div class="form-group row">
                <div class="col-3">
                    <label>Semester:</label>
                </div>
                <div class="col-9">
                    <select class="form-control dropdown" id="semesterId" asp-items="@(new SelectList(ViewBag.Semesters, "Id", "SeasonYear"))"></select>
                </div>
            </div>
        </div>
        <div class="col-6">
            <button type="submit" class="btn btn-primary" id="synchronizeCoursesBtn">
                <span class="btnTitle">
                    Synchronize
                </span> 
                <span class="spinner" hidden>
                    <i class="fas fa-sync animate-icon rotate"></i>
                    &nbsp; Synchronizing...
                </span>
            </button>
            <label>
                <input type="checkbox" name="force" id="force" />
                Force
            </label>
            <button type="submit" class="btn btn-primary ml-3" id="updateGradesBtn">
                <span class="btnTitle">
                    Update grades
                </span> 
                <span class="spinner" hidden>
                    <i class="fas fa-sync animate-icon rotate"></i>
                    &nbsp; Updating...
                </span>
            </button>
        </div>
    </div>
    
</div>

@section Scripts
{
    <script src="~/js/export-data.js" asp-append-version="true"></script>
}
