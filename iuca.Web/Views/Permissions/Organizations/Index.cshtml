@model IEnumerable<OrganizationDTO>

@{ 
    int num = 0;
}

<div class="container p3">
    <div class="row pt-4">
        <div class="col-12 p-0">
            <h3 class="text-uppercase">Organizations</h3>
        </div>
    </div>
    <div class="row pt-4 text-right">
        <div class="col-lg-6 col-12 p-0">
            <a asp-controller="Organizations" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Add Organization
            </a>
        </div>
    </div>
    <div class="row pt-2">
        <div class="col-lg-6 col-12 p-0">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>
                                Name
                            </th>
                            <th>
                                Is Main
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var org in Model)
                        {
                            num++;
                        <tr>
                            <td>@num</td>
                            <td>@org.Name</td>
                            <td class="text-center">
                                @if (org.IsMain)
                                {
                                    <i class="fas fa-check"></i>
                                }
                            </td>
                            <td width="15%" class="text-center p-2">
                                <div class="btn-group" role="group">
                                    <a asp-controller="Organizations" asp-route-id="@org.Id"
                                       asp-action="Details" class="btn btn-primary mx-1" title="Details">
                                        <i class="fas fa-file-alt"></i>
                                    </a>
                                    <a asp-controller="Organizations" asp-route-Id="@org.Id" asp-action="Edit" class="btn btn-primary mx-1">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-controller="Organizations" asp-route-Id="@org.Id" asp-action="Delete" class="btn btn-danger mx-1">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No organization exists</p>
            }
        </div>
    </div>
</div>