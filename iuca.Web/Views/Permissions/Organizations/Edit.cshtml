@model OrganizationDTO

<div class="container p3">
    <div class="row pt-4">
        <div class="col-12 p-0">
            <a asp-action="Index" class="btn btn-success"><i class="fas fa-reply"></i> &nbsp; Back</a>
        </div>
    </div>
    <div class="row pt-4">
        <div class="col-12 p-0">
            <h3 class="text-uppercase">Edit Organization</h3>
        </div>
    </div>
    <div class="text-danger">
        @TempData["Error"]
    </div>
    <div class="row pt-2">
        <div class="col-lg-6 col-12 p-0">
            <form method="post" asp-action="Edit">
                <input type="hidden" asp-for="Id" />
                <div class="border p-3">
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group row">
                                <div class="col-3 text-right">
                                    <label>Name:</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-3 text-right">
                                </div>
                                <div class="col-9">
                                    <input type="checkbox" asp-for="IsMain" class="checkbox-1x" />
                                    <label class="ml-1">Is Main</label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row mb-0">
                                <div class="col-12 p-0 row">
                                    <div class="col-12 p-0 text-right">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-edit"></i> &nbsp; Edit
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
