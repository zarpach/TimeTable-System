@model PermissionViewModel

@{
    string moduleName = "";
}

<div class="container p3">
    <div class="row pt-4">
        <div class="col-12 p-0">
            <a asp-controller="Roles" asp-action="Index" class="btn btn-success"><i class="fas fa-reply"></i> &nbsp; Back</a>
        </div>
    </div>
    <div class="row pt-4">
        <div class="col-12 p-0">
            <h3 class="text-uppercase">Manage Permissions</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-12 p-0">
            <h3>@Model.RoleNamePrefix</h3>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-lg-6 col-12 p-0">
            <form asp-controller="Permissions" method="post" asp-action="Update">
                <input type="hidden" asp-for="@Model.RoleNamePrefix"/>
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th class="text-center">Module name</th>
                            <th class="text-center">Type</th>
                            <th class="text-center">Permission</th>
                            <th class="text-center">Selected</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.RoleClaims.Count; i++)
                        {
                            <tr>
                                <td>
                                    <input type="hidden" asp-for="@Model.RoleClaims[i].ModuleName"/>
                                    @if (moduleName != Model.RoleClaims[i].ModuleName)
                                    {
                                        moduleName = Model.RoleClaims[i].ModuleName;
                                        <b>@Model.RoleClaims[i].ModuleName</b>
                                    }
                                </td>
                                <td>
                                    <input type="hidden" asp-for="@Model.RoleClaims[i].Type"/>
                                    @Model.RoleClaims[i].Type
                                </td>
                                <td>
                                    <input type="hidden" asp-for="@Model.RoleClaims[i].Value"/>
                                    @Model.RoleClaims[i].Value
                                </td>
                                <td class="text-right">
                                    <div class="form-check m-1">
                                        <input asp-for="@Model.RoleClaims[i].Selected" class="big-checkbox"/>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="form-group row mb-0">
                    <div class="col-12 p-0 text-right">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> &nbsp; Save
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
