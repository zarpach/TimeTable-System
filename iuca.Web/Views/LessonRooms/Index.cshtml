@using iuca.Application.DTO.Slots;
@using iuca.Application.Enums;

@model IEnumerable<LessonRoomDTO>

@{
    ViewBag.Title = "Lesson rooms";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-lg-6 col-12">
            <h3 class="text-uppercase">Lesson rooms</h3>
        </div>
        <div class="col-lg-6 col-12 text-right">
            <a asp-controller="LessonRooms" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Add lesson room
            </a>
        </div>
    </div>
    <br />

    @if (Model.Count() == 0)
    {
        <p>No rooms found.</p>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Room Name</th>
                    <th>Room Capacity</th>
                    <th>Floor</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var room in Model)
                {
                    <tr>
                        <td>@room.RoomName</td>
                        <td>@room.RoomCapacity</td>
                        <td>@(EnumExtentions.GetDisplayName((enu_Floors)room.Floor))</td>
                        <td class="text-right">
                            <div class="btn-group" role="group">
                                <a class="btn btn-outline-primary" style="border: 1px outset #435287; margin-right: 3px;" asp-action="Edit" asp-route-id="@room.Id">
                                    <i class="fas fa-edit"></i> &nbsp; Edit
                                </a>
                                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@room.Id">
                                    <i class="fas fa-trash"></i> &nbsp; Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
