@model List<StudentMidtermViewModel>

@{
    int num = 0;
}

<div class="container p-0">

    <div class="row align-items-center">
        <div class="col-lg-2 col-12 mt-4">
            <a asp-controller="InstructorCourses" asp-action="Index" asp-route-semesterId="@ViewBag.SemesterId"
               asp-route-instructorUserId="@ViewBag.InstructorUserId" 
               class="btn bg-gray text-white"><i class="fas fa-reply"></i> &nbsp; Back</a>
        </div>
        <div class="col-lg-10 col-12 mt-4 text-right">
            <h5 class="text-uppercase">@ViewBag.CourseName</h5>
        </div>
    </div>
    <hr />

    <div class="row mt-4">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-header bg-gray text-white">

                    <div class="row align-items-end justify-content-between">
                        <div class="col-lg-8 col-12 my-1">
                            <h5 class="m-0">Student Midterms</h5>
                        </div>
                        <div class="col-lg-4 col-12 row p-lg-0 my-1">
                            <div class="col-lg-4 col-6 p-lg-0">
                                <input type="number" class="form-control" id="maxScoreValue" value="100"/>
                            </div>
                            <div class="col-lg-8 col-6">
                                <button type="button" id="maxScoreBtn" class="btn btn-primary">
                                      Set max score
                                </button>
                            </div>
                            
                        </div>
                    </div>

                </div>
                <div class="card-body">

                    <div class="row">
                        <div class="col-12">

                            @if (Model.Count() > 0)
                            {
                                @foreach (var student in Model)
                                {
                                    num++;
                                    ViewData["Num"] = num;

                                    <div class="alert bg-gray-light text-black" role="alert">
                                        <partial name="_EditStudentMidtermPartial" for="@student" view-data="ViewData" />
                                    </div>
                                }
                            }
                            else
                            {
                                <p>No students</p>
                            }

                        </div>
                    </div>

                </div>
            </div>


        </div>
    </div>

</div>

@section Scripts {

    <script src="~/js/student-midterms.js" asp-append-version="true"></script>

}
