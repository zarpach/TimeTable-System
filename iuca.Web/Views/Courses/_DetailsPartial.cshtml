@model CourseDTO

<div class="form-group row">
    <div class="col-3 text-right">
        <label class="label-info">Name Eng:</label>
    </div>
    <div class="col-9">
        <label>@Model.NameEng</label>
    </div>
</div>
<div class="form-group row">
    <div class="col-3 text-right">
        <label class="label-info">Name Rus:</label>
    </div>
    <div class="col-9">
        <label>@Model.NameRus</label>
    </div>
</div>
<div class="form-group row">
    <div class="col-3 text-right">
        <label class="label-info">Name Kir:</label>
    </div>
    <div class="col-9">
        <label>@Model.NameKir</label>
    </div>
</div>
<div class="form-group row">
    <div class="col-3 text-right">
        <label class="label-info">Abbreviation:</label>
    </div>
    <div class="col-9">
        <label>@Model.Abbreviation</label>
    </div>
</div>
<div class="form-group row">
    <div class="col-3 text-right">
        <label class="label-info">Number:</label>
    </div>
    <div class="col-9">
        <label>@Model.Number</label>
    </div>
</div>
<div class="form-group row">
    <div class="col-3 text-right">
        <label class="label-info">Department:</label>
    </div>
    <div class="col-9">
        <label>@Model.Department.NameEng</label>
    </div>
</div>
<div class="form-group row">
    <div class="col-3 text-right">
        <label class="label-info">Language:</label>
    </div>
    <div class="col-9">
        <label>@Model.Language.NameEng</label>
    </div>
</div>

<hr>
<div class="row mt-4 mb-3" )>
    <div class="col-6">
        <label class="font-weight-bold">Course prerequisites:</label>
    </div>
</div>
@if (Model.CoursePrerequisites != null)
{
    foreach (var prerequisite in Model.CoursePrerequisites) 
    {
        <div class="form-group row">
            <div class="col-3 text-right">
                <label class="label-info">Name:</label>
            </div>
            <div class="col-9">
                <label>@prerequisite.Prerequisite.NameEng</label>
            </div>
        </div>
    }
}

