@using iuca.Application.Enums

@model StudentOrgInfoDTO

<form method="post" id="orgInfoForm" name="orgInfoForm" asp-controller="StudentInfo"
    asp-action="EditStudentOrgInfo" data-ajax="true" data-ajax-update="#orgInfoForm" data-ajax-mode="replace">
    <input type="hidden" asp-for="StudentBasicInfoId" />
    <input type="hidden" name="OrganizationId" value="@(Model == null ? "0" : Model.OrganizationId)"/>

    <div class="border rounded p-2 m-1 row">
        <div class="col-12 pt-2">
            <h4 class="text-uppercase">Student Organization Info 
                <span class="red-colored">@TempData["ErrorMessage"]</span> 
                <span class="green-colored">@TempData["SuccessMessage"]</span> 
            </h4>
        </div>
        <div class="col-12">
            <hr class="m-2 mb-3">
            <div class="form-group row">
                <div class="col-3 text-right">
                    <label asp-for="DepartmentGroup" class="form-label"></label>
                </div>
                <div class="col-9">
                    <select class="form-control dropdown" asp-for="DepartmentGroupId" asp-items="@ViewBag.DepartmentGroups"></select>
                    <span asp-validation-for="DepartmentGroupId" class="text-danger"></span>
                </div>
            </div>
            <hr class="m-2 mb-3">
            <div class="form-group row">
                <div class="col-3 text-right">
                    <label asp-for="StudentId" class="form-label"></label>
                </div>
                <div class="col-9">
                    <input class="form-control" asp-for="StudentId" />
                    <span asp-validation-for="StudentId" class="text-danger"></span>
                </div>
            </div>
            <hr class="m-2 mb-3">
            <div class="form-group row">
                <div class="col-3 text-right">
                    <label class="ml-1 form-label" asp-for="IsPrep"></label>
                </div>
                <div class="col-2 text-left">
                    <input type="checkbox" asp-for="IsPrep" class="big-checkbox"/>
                    
                </div>
                <div class="col-7">
                    <select class="form-control dropdown" asp-for="PrepDepartmentGroupId" asp-items="@ViewBag.PrepDepartmentGroups"
                        disabled="@(!Model?.IsPrep)">
                        <option></option>
                    </select>
                    <span asp-validation-for="PrepDepartmentGroupId" class="text-danger")></span>
                </div>
            </div>
 
            <hr class="m-2 mb-3">
            <div class="form-group row">
                <div class="col-3 text-right">
                    <label asp-for="State" class="form-label"></label>
                </div>
                <div class="col-9">
                    <select class="form-control dropdown" asp-for="State" asp-items="Html.GetEnumSelectList<enu_StudentState>()"></select>
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="col-12 text-right mb-2">
            <button type="submit" id="saveInstructorOrgInfoBtn" class="btn btn-primary">
                <i class="fas fa-save"></i>&nbsp; Save
            </button>
        </div>
    </div>
</form>


