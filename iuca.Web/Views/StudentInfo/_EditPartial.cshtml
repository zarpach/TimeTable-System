@model StudentInfoDetailsViewModel

<partial name="_EditOrgInfoPartial" />

<div id="infoContainer">
    <div class="row">
        <div class="col-lg-6 col-12">
            <div class="form-group row">
                <div class="col-3 text-right">
                </div>
                <div class="col-9">
                    <input type="checkbox" asp-for="StudentBasicInfo.ArmyService" class="big-checkbox"/>
                    <label class="ml-1">Army Service</label>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3 text-right">
                    <label>TOEFL:</label>
                </div>
                <div class="col-9">
                    <input class="form-control dropdown" asp-for="StudentBasicInfo.Toefl" />
                    <span asp-validation-for="StudentBasicInfo.Toefl" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="row form-group font-weight-bold">
                <div class="col-lg-4 col-10">
                    Student languages
                </div>
                <div class="col-2 text-right">
                    <button type="button" class="btn btn-primary" id="addLanguageBtn" title="Add language">
                        <i class="fas fa-plus"></i>
                    </button>
                </div>
            </div>
            <hr />
            <div id="languagesContainer">
                @if (Model != null && Model.StudentBasicInfo != null && Model.StudentBasicInfo.StudentLanguages != null)
                {
                    for (int i = 0; i < Model.StudentBasicInfo.StudentLanguages.Count; i++)
                    {
                        <partial name="_EditLanguagesPartial" for="@Model.StudentBasicInfo.StudentLanguages[i]" />
                    }
                }
            </div>
        </div>
    </div>

    <partial name="_EditContactInfoPartial" />

    <div class="row">
        <div class="col-12">
            <div class="row form-group font-weight-bold">
                <div class="col-lg-4 col-10">
                    Parents info
                </div>
                <div class="col-2 text-right">
                    <button type="button" class="btn btn-primary" id="addParentsInfoBtn" title="Add parents info">
                        <i class="fas fa-plus"></i>
                    </button>
                </div>
            </div>
            <hr />
            <div id="parentsInfoContainer">
                @if (Model != null && Model.StudentBasicInfo != null && Model.StudentBasicInfo.StudentParentsInfo != null)
                {
                    for (int i = 0; i < Model.StudentBasicInfo.StudentParentsInfo.Count; i++)
                    {
                        <partial name="_EditParentsInfoPartial" for="@Model.StudentBasicInfo.StudentParentsInfo[i]" />
                    }
                }
            </div>
        </div>
    </div>
    
</div>


