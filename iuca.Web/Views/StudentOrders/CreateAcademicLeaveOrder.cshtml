@model AcademicLeaveOrderDTO
@using iuca.Application.Enums

<div class="container p-0">

    <div class="row pt-2">
        <div class="col-auto">
            <a class="btn bg-gray text-white shadow-none" asp-action="Index">
                <i class="fas fa-reply"></i> &nbsp; Back
            </a>
        </div>
    </div>

    <div class="row pt-4 justify-content-between">
        <div class="col-auto">
            <h2>Academic Leave order creation</h2>
            <span class="text-success">
                @TempData["StudentOrdersSuccessMessage"]
            </span>
            <span class="text-danger">
                @TempData["StudentOrdersError"]
            </span>
            <span class="text-danger">
                @TempData["StudentOrdersErrorMessage"]
            </span>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn bg-blue text-white shadow-none" form="createOrder">
                <i class="fas fa-save"></i>&nbsp; Save
            </button>
        </div>
    </div>

    <hr />

    <div class="row pt-4">
        <div class="col-12">
            <form asp-action="CreateAcademicLeaveOrder" method="post" id="createOrder">
                <partial name="_EditAcademicLeaveOrderPartial.cshtml" />
            </form>
        </div>
    </div>

</div>
