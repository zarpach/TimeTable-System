@model IEnumerable<AcademicPlanDTO>

@{
    int num = 0;
}

<div class="container p3">
    <div class="row pt-4">
        <div class="col-12 p-0">
            <h3 class="text-uppercase">Academic plans</h3>
        </div>
    </div>
    <div class="row pt-4 text-right">
        <div class="col-12 p-0">
            <a asp-controller="AcademicPlans" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Add Academic Plan
            </a>
        </div>
    </div>
    <div class="row pt-2">
        <div class="col-12 p-0">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>
                                Department
                            </th>
                            <th>
                                Year
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var academicPlan in Model)
                        {
                            num++;
                            <tr>
                                <td>@num</td>
                                <td>@academicPlan.Department.Code</td>
                                <td>@academicPlan.Year</td>
                                <td width="15%" class="text-center p-2">
                                    <div class="btn-group" role="group">
                                        <a asp-controller="AcademicPlans" asp-route-id="@academicPlan.Id"
                                           asp-action="Details" class="btn btn-primary mx-1" title="Посмотреть">
                                            <i class="fas fa-file-alt"></i>
                                        </a>
                                        <a asp-controller="AcademicPlans" asp-route-Id="@academicPlan.Id" asp-action="Edit" class="btn btn-primary mx-1" title="Редактировать">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-controller="AcademicPlans" asp-route-Id="@academicPlan.Id" asp-action="EditAcademicPlanCourses" class="btn btn-primary mx-1" title="Редактировать курсы">
                                            <i class="fas fa-list-ol"></i>
                                        </a>
                                        <a asp-controller="AcademicPlans" asp-route-Id="@academicPlan.Id" asp-action="Delete" class="btn btn-danger mx-1" title="Удалить">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No academic plan exists</p>
            }
        </div>
    </div>
</div>
