@model IEnumerable<DeanDepartmentViewModel>

@{
    int num = 0;
}

<div class="container p3">
    <div class="row pt-4">
        <div class="col-12 p-0">
            <h3 class="text-uppercase">Deans</h3>
        </div>
    </div>

    <div class="row pt-2">
        <div class="col-12 p-0">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>
                                Dean
                            </th>
                            <th>
                                Departments
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var dean in Model)
                        {
                            num++;
                            <tr>
                                <td>@num</td>
                                <td>@dean.DeanUser.FullNameEng </td>
                                <td>@(string.Join(", ", dean.Departments.Select(x => x.Code)))</td>
                                <td width="30%" class="text-center p-2">
                                    <div class="btn-group">
                                        <a asp-controller="Deans" asp-route-deanUserId="@dean.DeanUser.Id"
                                           asp-action="EditDeanDepartments" class="btn btn-primary mx-1">
                                            <i class="fas fa-list-ol"></i> &nbsp; Edit departments
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No dean exists</p>
            }
        </div>
    </div>
</div>



