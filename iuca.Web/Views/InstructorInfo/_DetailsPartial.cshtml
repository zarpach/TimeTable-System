                    </div>
                    <div class="row">
                        <div class="col-4 text-right">
                            <label class="label-info">Place name kir:</label>
                        </div>
                        <div class="col-8">
                            <label>@otherJob.PlaceNameKir</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4 text-right">
                            <label class="label-info">Phone:</label>
                        </div>
                        <div class="col-8">
                            <label>@otherJob.Phone</label>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="row">
                        <div class="col-4 text-right">
                            <label class="label-info">Position eng:</label>
                        </div>
                        <div class="col-8">
                            <label>@otherJob.PositionEng</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4 text-right">
                            <label class="label-info">Position rus:</label>
                        </div>
                        <div class="col-8">
                            <label>@otherJob.PositionRus</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4 text-right">
                            <label class="label-info">Position kir:</label>
                        </div>
                        <div class="col-8">
                            <label>@otherJob.PositionKir</label>
                        </div>
                    </div>
                </div>
            </div>
        }
    }

