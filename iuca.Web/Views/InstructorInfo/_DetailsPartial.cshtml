        <div class="row">
            <div class="col-12 font-weight-bold">
                Other job Information
                <hr />
            </div>
        </div>

        @foreach (var otherJob in Model.InstructorBasicInfo.InstructorOtherJobInfo)
        {
            <div class="row  mb-3">
                <div class="col-lg-6">
                    <div class="row">
                        <div class="col-4 text-right">
                            <label class="label-info">Place name eng:</label>
                        </div>
                        <div class="col-8">
                            <label>@otherJob.PlaceNameEng</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4 text-right">
                            <label class="label-info">Place name rus:</label>
                        </div>
                        <div class="col-8">
