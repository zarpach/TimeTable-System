@model InstructorInfoDetailsViewModel
@using iuca.Application.Enums

<div class="row">
    <div class="col-lg-6">
        <div class="row">
            <div class="col-4 text-right">
                <label class="label-info">Full Name Eng:</label>
            </div>
            <div class="col-8">
                <label>@Model.UserInfo.FullNameEng</label>
            </div>
        </div>
        @if (Model.InstructorOrgInfo != null)
        {
            <div class="row">
                <div class="col-4 text-right">
                    <label class="label-info">Department:</label>
                </div>
                <div class="col-8">
                    <label>@Model.InstructorOrgInfo.Department.NameEng</label>
                </div>
            </div>
            <div class="row">
                <div class="col-4 text-right">
                    <label class="label-info">State:</label>
                </div>
                <div class="col-8">
                    <label>@((enu_InstructorState)Model.InstructorOrgInfo.State)</label>
                </div>
            </div>
            <div class="row">
                <div class="col-4 text-right">
                    <label class="label-info">Part time:</label>
                </div>
                <div class="col-8">
                    <label>@Model.InstructorOrgInfo.PartTime</label>
                </div>
            </div>
        }
    </div>
</div>

@if (@Model.InstructorBasicInfo != null)
{
