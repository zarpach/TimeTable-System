        <div class="col-lg-6">

            <div class="row">
                <div class="col-4 text-right">
                    <label class="label-info">Is married:</label>
                </div>
                <div class="col-8">
                    <label>@Model.InstructorBasicInfo.IsMarried</label>
                </div>
            </div>
            <div class="row">
                <div class="col-4 text-right">
                    <label class="label-info">Children:</label>
                </div>
                <div class="col-8">
                    <label>@Model.InstructorBasicInfo.ChildrenQty</label>
                </div>
            </div>
        </div>
        
    </div>

    @if (Model.InstructorBasicInfo.InstructorOtherJobInfo != null)
