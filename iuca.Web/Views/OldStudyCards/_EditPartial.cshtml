@model OldStudyCardDTO

<div class="form-group row">
    <div class="col-3 text-right">
        <label>Semesters:</label>
    </div>
    <div class="col-9">
        <select class="form-control dropdown" asp-for="SemesterId" asp-items="@ViewBag.Semesters"></select>
        <span asp-validation-for="SemesterId" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <div class="col-3 text-right">
        <label>Group:</label>
    </div>
    <div class="col-9">
        <select class="form-control dropdown" asp-for="DepartmentGroupId" asp-items="@ViewBag.DepartmentGroups"></select>
        <span asp-validation-for="DepartmentGroupId" class="text-danger"></span>
    </div>
</div>