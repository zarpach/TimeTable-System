@using Microsoft.AspNetCore.Identity
@using iuca.Infrastructure.Identity.Entities
@using iuca.Infrastructure.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject ApplicationUserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link" asp-action="AccountInfo" asp-controller="Account" title="Manage"> @UserManager.GetUserFullName(User)</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="Account" asp-action="GoogleLogout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link ">Sign out</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="GoogleLogin">Sign in</a>
        </li>
    }
</ul>
