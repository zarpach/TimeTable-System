@using iuca.Application.Enums

@{
    bool activeOnly = (ViewBag.ActiveOnly == null || ViewBag.ActiveOnly);
    bool noRegistrations = (ViewBag.NoRegistrations == null || ViewBag.NoRegistrations);
}

<div class="row">

    <div class="col-lg-4 col-12">
        <div class="row">

            <div class="col-12">
                <div class="form-group row">
                    <div class="col-12">
                        <label>Семестр</label>
                    </div>
                    <div class="col-12">
                        <select class="form-control dropdown" name="semesterId" asp-items="@ViewBag.Semesters"></select>
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="form-group row">
                    <div class="col-12">
                        <label>Задолженность</label>
                    </div>
                    <div class="col-12">
                        <select class="form-control dropdown" name="debtorType" asp-items="@ViewBag.DebtorTypes"></select>
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="form-group row">
                    <div class="col-12">
                        <label>
                            <input type="checkbox" name="activeOnly" id="activeOnly" value="@(activeOnly ? "true" : "false")"
                                   @(activeOnly ? "checked" : "") onchange="this.value = this.checked;" />
                            Только активные
                        </label>
                    </div>
                    <div class="col-12">
                        <label>
                            <input type="checkbox" name="noRegistrations" id="noRegistrations" value="@(noRegistrations ? "true" : "false")"
                                   @(noRegistrations ? "checked" : "") onchange="this.value = this.checked;" />
                            Не прошедшие регистрацию
                        </label>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="col-lg-4 col-12">
        <div class="row">

            <div class="col-12">
                <div class="form-group row">
                    <div class="col-12">
                        <label>Фамилия</label>
                    </div>
                    <div class="col-12">
                        <input type="text" class="form-control" name="lastName" value="@ViewBag.LastName" />
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="form-group row">
                    <div class="col-12">
                        <label>Имя</label>
                    </div>
                    <div class="col-12">
                        <input type="text" class="form-control" name="firstName" value="@ViewBag.FirstName" />
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="col-lg-4 col-12">
        <div class="row">

             <div class="col-12">
                <div class="form-group row">
                    <div class="col-12">
                        <label>ID студента</label>
                    </div>
                    <div class="col-12">
                        <input type="text" class="form-control" name="studentId" value="@ViewBag.StudentId" />
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="form-group row">
                    <div class="col-12">
                        <label>Группа</label>
                    </div>
                    <div class="col-12">
                        <select class="form-control dropdown" name="departmentGroupId" asp-items="@ViewBag.DepartmentGroups">
                            <option value="0">Все</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="form-group row">
                    <div class="col-12 text-right">
                        <button type="submit" class="btn btn-primary">
                            <i class="fab fa-sistrix"></i> &nbsp; Поиск
                        </button>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>

<hr class="my-1"/>
