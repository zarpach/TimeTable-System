@using iuca.Application.Enums;
@model List<InstructorCourseStudentViewModel>

@{
    Layout = null;
    int num = 0;
}

<div class="portraitA4">
    <h4>Course ID: <b>@ViewBag.CourseId</b>, Section: <b>@ViewBag.CourseSection</b></h4>
    <h4><b>@ViewBag.CourseCode</b> @ViewBag.CourseName </h4>
    <br>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Group</th>
                    <th>Status</th>
                    <th>Reg. state</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model)
                {
                    num++;
                    <tr>
                        <td>@num</td>
                        <td>@student.StudentId</td>
                        <td>@student.StudentName</td>
                        <td>@($"{student.StudentMajor}{student.StudentGroup}")</td>
                        <td>@student.StudentStatus</td>
                        <td>
                            @if (student.RegistrationState == enu_RegistrationState.Submitted)
                            {
                                <text>Ok</text>
                            }
                            else
                            {
                                <span class="text-danger">@student.RegistrationState</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No students</p>
    }

</div>

<style type="text/css">

    html {
        font-family: sans-serif;
        line-height: 1.15;
        -webkit-text-size-adjust: 100%;
        -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    }

    table {
        page-break-inside: auto
    }

    tr {
        page-break-inside: avoid;
        page-break-after: auto
    }

    thead {
        display: table-header-group
    }

    tfoot {
        display: table-footer-group
    }

    table, th, td {
        border: 1px solid;
        padding: 5px 10px;
    }

    table {
        border-collapse: collapse;
    }

    .portraitA4 {
        width: 21cm;
        height: 29.7cm;
        margin: 0mm 35mm 0mm 35mm;
    }

</style>