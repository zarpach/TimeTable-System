@model RoleViewModel

<div class="container p3">
    <div class="row pt-4">
        <div class="col-12 p-0">
            <a asp-action="Index" class="btn btn-success"><i class="fas fa-reply"></i> &nbsp; Back</a>
        </div>
    </div>
    <div class="row pt-4">
        <div class="col-12 p-0">
            <h3>Delete Role</h3>
        </div>
    </div>
    <div class="text-danger">
        @TempData["Error"]
    </div>
    <div class="row pt-2">
        <div class="col-lg-6 col-12 p-0">
            <form method="post" asp-action="DeleteConfirm">
                @foreach(var roleId in Model.RoleIds)
                {
                    <input type="hidden" name="RoleIds" value="@roleId" />
                }
                <div class="p-3">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group row">
                                <div class="col-3">
                                    <label for="name">Name:</label>
                                </div>
                                <div class="col-9">
                                    <label class="font-weight-bold">@Model.RoleName</label>
                                </div>
                            </div>
                            <div class="form-group row mb-0">
                                <div class="col-12 p-0 row">
                                    <div class="col-12 p-0 text-right">
                                        <button type="submit" class="btn btn-danger">
                                            <i class="fas fa-trash-alt"></i> &nbsp; Delete
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

