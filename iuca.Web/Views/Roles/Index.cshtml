@model List<RoleViewModel>

<div class="container p3">
    <div class="row pt-4">
        <div class="col-12 p-0">
            <h3>Roles List</h3>
        </div>
    </div>
    <div class="row pt-4 text-right">
        <div class="col-lg-6 col-12 p-0">
            <a asp-controller="Roles" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Add Role
            </a>
        </div>
    </div>
    <div class="row pt-2">
        <div class="col-lg-6 col-12 p-0">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Organization Ids
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model.OrderBy(x => x.RoleName))
                        {
                            <tr>
                                <td>@role.RoleName</td>
                                <td>@(string.Join(", ", role.OrganizationIds))</td>
                                <td width="15%" class="text-center p-2">
                                    <div class="btn-group" role="group">
                                        <a asp-controller="Roles" asp-route-roleNamePrefix="@role.RoleName" asp-action="Edit" class="btn btn-primary mx-1">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-controller="Roles" asp-route-roleNamePrefix="@role.RoleName" asp-action="Delete" class="btn btn-danger mx-1">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                        <a asp-controller="Permissions" asp-route-roleNamePrefix="@role.RoleName" asp-action="Index" class="btn btn-primary mx-1">
                                            <i class="fas fa-key"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No role exists</p>
            }
        </div>
    </div>
</div>
